#HISTORY SETTINGS
setopt HIST_SAVE_NO_DUPS
setopt HIST_FIND_NO_DUPS
setopt HIST_IGNORE_SPACE
HISTIGNORE="ls:ls -l:ls -la:cd :cd .."  #Note - this only works in bash.
HISTSIZE=100 #Number of lines in the history file.
SAVEHIST=50 #Number of lines to be saved from the session.

#ALIASES
alias ll='ls -laF'
alias la='ls -la'
alias showhidden='defaults write com.apple.finder AppleShowAllFiles 1 && killall Finder'
alias hidehidden='defaults write com.apple.finder AppleShowAllFiles 0 && killall Finder'
